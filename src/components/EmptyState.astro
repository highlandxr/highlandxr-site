---
import Button from "./Button.astro";

interface Props {
  title: string;
  description: string;
  actionLabel?: string;
  actionHref?: string;
}

const { title, description, actionLabel, actionHref } = Astro.props;
---

<div class="surface-panel-soft grid gap-3 p-6 text-left" role="status">
  <p class="text-xs font-semibold uppercase tracking-[0.16em] text-text-subtle">No items found</p>
  <h3 class="text-2xl">{title}</h3>
  <p class="max-w-xl text-text-muted">{description}</p>
  {actionLabel && actionHref ? <Button href={actionHref} variant="ghost">{actionLabel}</Button> : null}
</div>

---
interface Props {
  kicker?: string;
  title: string;
  description: string;
  primaryLabel: string;
  primaryHref: string;
  secondaryLabel?: string;
  secondaryHref?: string;
}

const {
  kicker,
  title,
  description,
  primaryLabel,
  primaryHref,
  secondaryLabel,
  secondaryHref
} = Astro.props;
---

<section class="hero surface" aria-labelledby="hero-title">
  <div class="hero__glow" aria-hidden="true"></div>
  <div class="hero__lines" aria-hidden="true"></div>

  <div class="hero__content">
    {kicker ? <p class="hero__kicker">{kicker}</p> : null}
    <h1 id="hero-title">{title}</h1>
    <p class="hero__description">{description}</p>
    <div class="hero__actions">
      <a class="btn btn--primary" href={primaryHref}>{primaryLabel}</a>
      {secondaryLabel && secondaryHref ? <a class="btn btn--ghost" href={secondaryHref}>{secondaryLabel}</a> : null}
    </div>
    {Astro.slots.has("meta") ? <div class="hero__meta"><slot name="meta" /></div> : null}
  </div>
</section>

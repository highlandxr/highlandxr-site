---
interface Props {
  title: string;
  description?: string;
  kicker?: string;
  align?: "left" | "center";
  className?: string;
  level?: "h1" | "h2" | "h3";
}

const {
  title,
  description,
  kicker,
  align = "left",
  className = "",
  level = "h2"
} = Astro.props;
const HeadingTag = level;
---

<header class={`grid gap-3 ${align === "center" ? "justify-items-center text-center" : ""} ${className}`.trim()}>
  {kicker ? <p class="text-xs font-semibold uppercase tracking-[0.16em] text-text-subtle">{kicker}</p> : null}
  <HeadingTag class={`${level === "h1" ? "text-4xl md:text-5xl" : "text-3xl md:text-4xl"} max-w-3xl`}>{title}</HeadingTag>
  {description ? <p class="max-w-2xl text-sm md:text-base text-text-muted">{description}</p> : null}
</header>

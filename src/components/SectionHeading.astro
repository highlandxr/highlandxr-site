---
interface Props {
  title: string;
  description?: string;
  kicker?: string;
  align?: "left" | "center";
  className?: string;
  level?: "h1" | "h2" | "h3";
}

const {
  title,
  description,
  kicker,
  align = "left",
  className = "",
  level = "h2"
} = Astro.props;
const sectionHeadingClass = `section-heading section-heading--${align} ${className}`.trim();
const HeadingTag = level;
---

<header class={sectionHeadingClass}>
  {kicker ? <p class="section-heading__kicker">{kicker}</p> : null}
  <HeadingTag class="section-heading__title">{title}</HeadingTag>
  {description ? <p class="section-heading__description">{description}</p> : null}
</header>

---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = "HighlandXR",
  description = "Connecting XR events, talent, and funding across the Scottish Highlands."
} = Astro.props;

const pageTitle = `${title} | HighlandXR`;
const pathname = Astro.url.pathname;

const navItems = [
  { href: "/", label: "Home" },
  { href: "/events", label: "Events" },
  { href: "/directory", label: "Directory" },
  { href: "/funding", label: "Funding" },
  { href: "/submit", label: "Submit" }
];

const isActive = (href: string) => {
  if (href === "/") return pathname === "/";
  return pathname.startsWith(href);
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="alternate" type="application/rss+xml" title="HighlandXR Events RSS" href="/rss.xml" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Literata:wght@600;700&family=Source+Sans+3:wght@400;600;700&display=swap"
    />
    <title>{pageTitle}</title>
  </head>
  <body>
    <div class="page-shell">
      <header>
        <div class="container topbar">
          <a href="/" class="brand">HighlandXR</a>
          <nav aria-label="Main">
            <ul>
              {
                navItems.map((item) => (
                  <li>
                    <a href={item.href} class={isActive(item.href) ? "active" : undefined}>
                      {item.label}
                    </a>
                  </li>
                ))
              }
            </ul>
          </nav>
        </div>
      </header>

      <main class="container">
        <slot />
      </main>

      <footer>
        <div class="container footer-inner">
          <p>HighlandXR</p>
          <p>XR community infrastructure for the Scottish Highlands</p>
        </div>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --bg: #f4f8f6;
    --bg-soft: #e9f1ee;
    --surface: #ffffff;
    --text: #1e2d2b;
    --muted: #49605d;
    --line: #cfe0da;
    --accent: #2f6962;
    --accent-soft: #dcece7;
    --radius: 14px;
    --shadow: 0 10px 30px rgba(33, 67, 62, 0.06);
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: "Source Sans 3", "Trebuchet MS", sans-serif;
    color: var(--text);
    background:
      radial-gradient(80rem 40rem at 10% -10%, rgba(113, 154, 145, 0.2), transparent 70%),
      radial-gradient(80rem 40rem at 90% -20%, rgba(109, 138, 167, 0.18), transparent 65%),
      linear-gradient(180deg, var(--bg), #eff5f3 45%, #ecf3f5 100%);
    min-height: 100vh;
  }

  a {
    color: var(--accent);
    text-underline-offset: 3px;
  }

  .page-shell {
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto 1fr auto;
  }

  .container {
    width: min(980px, 92vw);
    margin: 0 auto;
  }

  header {
    position: sticky;
    top: 0;
    z-index: 20;
    background: rgba(244, 248, 246, 0.9);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--line);
  }

  .topbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    padding: 0.9rem 0;
  }

  .brand {
    font-family: "Literata", Georgia, serif;
    font-size: 1.25rem;
    letter-spacing: 0.02em;
    text-decoration: none;
    color: var(--text);
  }

  nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 0.4rem;
  }

  nav a {
    display: inline-block;
    text-decoration: none;
    color: var(--muted);
    border: 1px solid transparent;
    border-radius: 999px;
    padding: 0.38rem 0.75rem;
    font-size: 0.96rem;
    transition: 160ms ease;
  }

  nav a:hover {
    color: var(--text);
    border-color: var(--line);
    background: var(--surface);
  }

  nav a.active {
    color: var(--text);
    border-color: var(--line);
    background: var(--accent-soft);
  }

  main {
    padding: 2rem 0 3rem;
  }

  h1,
  h2,
  h3 {
    font-family: "Literata", Georgia, serif;
    line-height: 1.2;
    margin-top: 0;
  }

  h1 {
    font-size: clamp(2rem, 2.8vw, 2.7rem);
    margin-bottom: 0.8rem;
  }

  h2 {
    font-size: clamp(1.45rem, 2vw, 1.8rem);
    margin-bottom: 0.7rem;
  }

  p {
    line-height: 1.55;
    margin: 0 0 1rem;
  }

  .lead {
    color: var(--muted);
    max-width: 62ch;
  }

  .surface {
    background: var(--surface);
    border: 1px solid var(--line);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
  }

  .list-grid {
    display: grid;
    gap: 1rem;
    grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
  }

  .list-card {
    padding: 1rem;
    background: var(--surface);
    border: 1px solid var(--line);
    border-radius: 12px;
  }

  .tag {
    display: inline-flex;
    align-items: center;
    border: 1px solid var(--line);
    border-radius: 999px;
    padding: 0.17rem 0.58rem;
    font-size: 0.83rem;
    color: var(--muted);
    background: #f8fcfb;
    margin-right: 0.4rem;
    margin-bottom: 0.35rem;
  }

  .meta {
    color: var(--muted);
    font-size: 0.95rem;
    margin-bottom: 0.65rem;
  }

  .section-space {
    margin-top: 2rem;
  }

  footer {
    border-top: 1px solid var(--line);
    background: rgba(255, 255, 255, 0.65);
  }

  .footer-inner {
    padding: 1.4rem 0 1.8rem;
    color: var(--muted);
    font-size: 0.93rem;
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .footer-inner p {
    margin: 0;
  }

  @media (max-width: 760px) {
    .topbar {
      align-items: flex-start;
      flex-direction: column;
    }

    nav ul {
      gap: 0.35rem;
    }
  }
</style>

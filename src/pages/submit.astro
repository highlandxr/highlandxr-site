---
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import SectionHeader from "../components/SectionHeader.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Submit" description="Submit events, directory entries, and funding opportunities to HighlandXR.">
  <SectionHeader
    level="h1"
    kicker="Contribute"
    title="Submit to Highland XR"
    description="Share an event, organization, or funding opportunity. Listings are reviewed to keep the directory clear, accurate, and local."
  />

  <section class="surface-panel relative mt-7 overflow-hidden p-6 md:p-8">
    <div aria-hidden="true" class="pointer-events-none absolute inset-0 bg-aurora opacity-35"></div>
    <div class="relative z-10 grid max-w-2xl gap-4">
      <h2 class="text-3xl">Use the Intake Form</h2>
      <p class="text-text-muted">
        The fastest route is the submission form. Include complete details so we can publish without follow-up.
      </p>
      <div class="flex flex-wrap gap-3">
        <Button href="https://example.org/highlandxr-submit">Open Submission Form</Button>
        <Button href="mailto:submissions@highlandxr.org" variant="ghost">Email Instead</Button>
      </div>
      <p class="text-sm text-text-subtle">Typical review time: up to 3 working days.</p>
    </div>
  </section>

  <section class="section-space">
    <SectionHeader
      kicker="Checklist"
      title="What to Include"
      description="Use these field groups so listings are consistent and searchable."
    />

    <div class="mt-6 grid gap-4 md:grid-cols-3">
      <Card headingLevel="h3" title="Event Listing">
        <ul>
          <li>Title and one-line description</li>
          <li>Date (YYYY-MM-DD) and town</li>
          <li>Category: meetup, workshop, or showcase</li>
          <li>Venue and external link (optional)</li>
        </ul>
      </Card>

      <Card headingLevel="h3" title="Directory Listing">
        <ul>
          <li>Organization name and short summary</li>
          <li>Town and category (community, studio, education)</li>
          <li>Website URL and contact email (optional)</li>
          <li>Primary audience or service focus</li>
        </ul>
      </Card>

      <Card headingLevel="h3" title="Funding Listing">
        <ul>
          <li>Call title and concise eligibility summary</li>
          <li>Amount range if available</li>
          <li>Deadline date or rolling status</li>
          <li>Official guidance link</li>
        </ul>
      </Card>
    </div>
  </section>
</BaseLayout>
